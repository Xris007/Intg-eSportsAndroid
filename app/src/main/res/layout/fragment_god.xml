<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".presentation.god.GodFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/back"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="@+id/god_backdrop"
            app:layout_constraintTop_toTopOf="@+id/god_backdrop"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios" />

        <ImageView
            android:id="@+id/god_backdrop"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:contentDescription="@string/backdrop"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/god_attribute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/hero_icon"
            android:elevation="1dp"
            app:layout_constraintBottom_toTopOf="@+id/god_name"
            app:layout_constraintStart_toStartOf="@+id/god_name" />

        <TextView
            android:id="@+id/god_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/god_roles"
            app:layout_constraintStart_toStartOf="@+id/god_roles" />

        <TextView
            android:id="@+id/god_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/god_roles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/lettersColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/god_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor">

                    <TextView
                        android:id="@+id/god_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/about"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/god_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textColor="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/god_about"
                        app:layout_constraintTop_toBottomOf="@+id/god_about" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor">

                    <TextView
                        android:id="@+id/god_stats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/stats"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/god_stats"
                        app:layout_constraintTop_toBottomOf="@+id/god_stats">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">



                            <ImageView
                                android:id="@+id/attack_speed_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/attack_speed_god"
                                app:layout_constraintBottom_toBottomOf="@+id/attack_speed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/attack_speed"
                                app:srcCompat="@drawable/ic_attack_speed" />

                            <TextView
                                android:id="@+id/attack_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/attack_speed_icon"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/god_range_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/range_attack_god"
                                app:layout_constraintBottom_toBottomOf="@+id/god_range"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/god_range"
                                app:srcCompat="@drawable/ic_range" />

                            <TextView
                                android:id="@+id/god_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/god_range_icon"
                                app:layout_constraintTop_toBottomOf="@+id/attack_speed" />

                            <ImageView
                                android:id="@+id/health_regeneration_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/health_god_regeneration"
                                app:layout_constraintBottom_toBottomOf="@+id/health_regeneration"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/health_regeneration"
                                app:srcCompat="@drawable/ic_health_regeneration" />

                            <TextView
                                android:id="@+id/health_regeneration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/health_regeneration_icon"
                                app:layout_constraintTop_toBottomOf="@id/god_range" />

                            <ImageView
                                android:id="@+id/mana_regeneration_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/mana_god_regeneration"
                                app:layout_constraintBottom_toBottomOf="@+id/mana_regeneration"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="mana_regeneration"
                                app:srcCompat="@drawable/ic_mana_regeneration"/>

                            <TextView
                                android:id="@+id/mana_regeneration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/mana_regeneration_icon"
                                app:layout_constraintTop_toBottomOf="@+id/health_regeneration"/>



                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/lettersColor" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <ImageView
                                android:id="@+id/god_damage_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/damage_god"
                                app:layout_constraintBottom_toBottomOf="@+id/god_damage"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/god_damage"
                                app:srcCompat="@drawable/ic_sword" />

                            <TextView
                                android:id="@+id/god_damage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/god_damage_icon"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/god_magic_resistance_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/magic_resistance_god"
                                app:layout_constraintBottom_toBottomOf="@+id/god_magic_resistance"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/god_magic_resistance"
                                app:srcCompat="@drawable/ic_magic_recistance" />

                            <TextView
                                android:id="@+id/god_magic_resistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/god_magic_resistance_icon"
                                app:layout_constraintTop_toBottomOf="@+id/god_damage" />


                            <ImageView
                                android:id="@+id/god_armor_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/physical_resistance_god"
                                app:layout_constraintBottom_toBottomOf="@+id/god_armor"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/god_armor"
                                app:srcCompat="@drawable/ic_shield" />

                            <TextView
                                android:id="@+id/god_armor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@+id/god_armor_icon"
                                app:layout_constraintTop_toBottomOf="@+id/god_magic_resistance" />

                            <ImageView
                                android:id="@+id/god_move_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/movement_god"
                                app:layout_constraintBottom_toBottomOf="@+id/god_move"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/god_move"
                                app:srcCompat="@drawable/ic_movement_speed" />

                            <TextView
                                android:id="@+id/god_move"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/god_move_icon"
                                app:layout_constraintTop_toBottomOf="@+id/god_armor" />

                            <ImageView
                                android:id="@+id/god_health_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="16dp"
                                android:contentDescription="@string/health_god"
                                android:tint="@color/healthColor"
                                app:layout_constraintBottom_toBottomOf="@+id/container_health"
                                app:layout_constraintStart_toEndOf="@+id/god_damage"
                                app:layout_constraintTop_toTopOf="@+id/container_health"
                                app:srcCompat="@drawable/ic_heart" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/container_health"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:background="@color/healthColor"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/god_health_icon"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/god_health"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/god_hp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textColor="@color/lettersColor"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/god_health"
                                    app:layout_constraintStart_toEndOf="@+id/god_health"
                                    app:layout_constraintTop_toTopOf="@+id/god_health" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/god_mana_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/mana_god"
                                android:tint="@color/energyColor"
                                app:layout_constraintBottom_toBottomOf="@+id/container_mana"
                                app:layout_constraintStart_toStartOf="@+id/god_health_icon"
                                app:layout_constraintTop_toTopOf="@+id/container_mana"
                                app:srcCompat="@drawable/ic_heart" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/container_mana"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="16dp"
                                android:background="@color/energyColor"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/god_mana_icon"
                                app:layout_constraintTop_toBottomOf="@+id/container_health">

                                <TextView
                                    android:id="@+id/god_mana"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/god_mp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textColor="@color/lettersColor"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/god_mana"
                                    app:layout_constraintStart_toEndOf="@+id/god_mana"
                                    app:layout_constraintTop_toTopOf="@+id/god_mana" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>